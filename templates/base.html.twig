<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{% block title %}{% endblock %}</title>

  <link rel="stylesheet" type="text/css" href="{{asset('css/commun.css')}}">
  <link rel="stylesheet" type="text/css" href="{{asset('css/user.css')}}">
  {# admin css and js #}
  {% if is_granted('ROLE_ADMIN') %}
  <link rel="stylesheet" type="text/css" href="{{asset('css/admin.css')}}">
  {% endif %}
  <link rel="stylesheet" type="text/css" href="{{asset('swiper/package/css/swiper.min.css')}}">
  <link rel="stylesheet" type="text/css" href="{{asset('Semantic Ui/semantic.min.css')}}">
  {% block stylesheets %}
  {% endblock %}


</head>

<body>
  <div class="container">

    <!-- Header -->

    {% if is_granted('ROLE_ADMIN') %}
    <div class="ui four item menu">
      <a class="item" href="{{path("admin_home")}}">Users</a>
      <a class="item" href="{{path("admin_activity")}}">Activities</a>
      <a class="item" href="{{path("admin_coach")}}">Coaches</a>
      <a class="item" href="{{path("admin_sessions")}}">Sessions</a>
    </div>
    {% endif %}

    <div class="ui menu">
      <a class="header item " href="{{path('homepage')}}">
        Acceuill
      </a>
      <a class="header item" href="{{path('users_list')}}">
        Users
      </a>
      <a class="header item" href="{{path('session_schedule')}}">
        Sessions schedule
      </a>
      <div class="right menu">
        <div class="item">
          <div class="ui icon input">
            <input type="text" placeholder="Search...">
            <i class="search link icon"></i>
          </div>
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{path('user_profile')}}" class="ui item">
          My account
        </a>
        <a class="ui item" href="{{path('app_logout')}}">
          Logout
        </a>
        {% else %}
        <a class="ui item" href="{{path('app_login')}}">
          Login
        </a>

        <a class="ui item" href="{{path('app_register')}}">
          Register
        </a>
        {% endif %}

      </div>
    </div>

    {% block body %}{% endblock %}
  </div>


  <script src="{{asset('js/jquery.js')}}"></script>
  <script src="{{asset('swiper/package/js/swiper.min.js')}}"></script>
  <script src="{{asset('Semantic Ui/semantic.min.js')}}"></script>
  {% block javascripts %}
  {% endblock %}
</body>

</html>